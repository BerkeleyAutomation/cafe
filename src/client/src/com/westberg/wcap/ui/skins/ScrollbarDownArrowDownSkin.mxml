<?xml version="1.0" encoding="utf-8"?>
<GraphicBorderSkin xmlns:mx="http://www.adobe.com/2006/mxml" 
                   xmlns="com.degrafa.skins.*" xmlns:paint="com.degrafa.paint.*" xmlns:geometry="com.degrafa.geometry.*" xmlns:repeaters="com.degrafa.geometry.repeaters.*">

    <mx:Script>
        <![CDATA[
            [Bindable]
            private var awidth:Number=0;

            [Bindable]
            private var aheight:Number=0;
            
            override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void{
                super.updateDisplayList(unscaledWidth, unscaledHeight);
                awidth = unscaledWidth;
                aheight = unscaledHeight;
                }
        ]]>
    </mx:Script>

    <fills>
    	<paint:LinearGradientFill id="MainFill" angle="90">
    	   	<paint:GradientStop ratio="1" alpha="1" color="#AAAAAA"/>
            <paint:GradientStop ratio="0" alpha="1" color="#BBBBBB"/>
    	</paint:LinearGradientFill>
    	
    	<paint:SolidFill id="ArrowFill" alpha="1" color="#000000"/>

		<paint:LinearGradientFill id="WashFill" angle="90" >
            <paint:GradientStop ratio="0" alpha=".75" color="#FFFFFF"/>
            <paint:GradientStop ratio="1" alpha="0" color="#FFFFFF"/>
        </paint:LinearGradientFill>
    </fills>

	<strokes>
		<paint:SolidStroke weight="1" alpha="1" color="#cc20ff" id="theStroke"/>
	</strokes>
    <geometry>
    	<geometry:RoundedRectangleComplex x="0" y="0" bottomLeftRadius="8" bottomRightRadius="8" topLeftRadius="0" topRightRadius="0" width="{awidth}" height="{aheight}" fill="{MainFill}"/>
    	<geometry:Polygon fill="{ArrowFill}">
    		<geometry:data>5,5 11,5 8,11</geometry:data>
    	</geometry:Polygon>
    </geometry>

</GraphicBorderSkin>
<?xml version="1.0" encoding="utf-8"?>
<GraphicBorderSkin xmlns:mx="http://www.adobe.com/2006/mxml" 
                   xmlns="com.degrafa.skins.*" xmlns:paint="com.degrafa.paint.*" xmlns:geometry="com.degrafa.geometry.*" xmlns:repeaters="com.degrafa.geometry.repeaters.*">

    <mx:Script>
        <![CDATA[
            [Bindable]
            private var awidth:Number=0;

            [Bindable]
            private var aheight:Number=0;
            
            override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void{
                super.updateDisplayList(unscaledWidth, unscaledHeight);
                awidth = 10;//unscaledWidth;
                aheight = unscaledHeight;
                }
        ]]>
    </mx:Script>

    <fills>
    	<paint:SolidFill id="MainFill" color="#000000" alpha="1"/>

         <paint:LinearGradientFill id="WashFillRight" angle="0" >
            <paint:GradientStop ratio="0" alpha=".5" color="#FFFFFF"/>
            <paint:GradientStop ratio="1" alpha="0" color="#FFFFFF"/>
        </paint:LinearGradientFill>
         <paint:LinearGradientFill id="WashFillUp" angle="270" >
            <paint:GradientStop ratio="0" alpha=".3" color="#FFFFFF"/>
            <paint:GradientStop ratio="1" alpha="0" color="#FFFFFF"/>
        </paint:LinearGradientFill>
         <paint:LinearGradientFill id="WashFillDown" angle="90" >
            <paint:GradientStop ratio="0" alpha=".3" color="#FFFFFF"/>
            <paint:GradientStop ratio="1" alpha="0" color="#FFFFFF"/>
        </paint:LinearGradientFill>
    </fills>

	<strokes>
		<paint:SolidStroke weight="1" alpha="1" color="#cc93ff" id="theStroke"/>
	</strokes>
    <geometry>
    	<geometry:RoundedRectangleComplex x="-5" bottomLeftRadius="5" bottomRightRadius="5" topLeftRadius="5" topRightRadius="5" width="{awidth}" height="{aheight}" fill="{MainFill}"/>
    	<geometry:RoundedRectangleComplex x="-5" bottomLeftRadius="5" bottomRightRadius="0" topLeftRadius="5" topRightRadius="0" width="{awidth-3}" height="{aheight}" fill="{WashFillRight}"/>
    	<geometry:Ellipse x="-5" y="0" width="10" height="10" fill="{WashFillDown}"/>
    	<geometry:Ellipse x="-5" y="{aheight-10}" width="10" height="10" fill="{WashFillUp}"/>
	</geometry>

</GraphicBorderSkin>
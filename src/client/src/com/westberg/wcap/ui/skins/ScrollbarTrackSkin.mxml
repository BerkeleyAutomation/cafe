<?xml version="1.0" encoding="utf-8"?>
<GraphicBorderSkin xmlns:mx="http://www.adobe.com/2006/mxml" 
                   xmlns="com.degrafa.skins.*" xmlns:paint="com.degrafa.paint.*" xmlns:geometry="com.degrafa.geometry.*" xmlns:repeaters="com.degrafa.geometry.repeaters.*">

    <mx:Script>
        <![CDATA[
        	import mx.controls.Alert;
        	import mx.controls.VScrollBar;
        	import mx.controls.HScrollBar;
            [Bindable]
            private var awidth:Number=0;

            [Bindable]
            private var aheight:Number=0;
            
            override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void {
                super.updateDisplayList(unscaledWidth, unscaledHeight);
                
                // Wrapped this in a try/catch, because sometimes "parent" doesn't exist, and that causes an error
                // Still not sure why this error occurs
                try {
	                if (parent.parent is VScrollBar)
	                {
		                awidth = parent.parent.width; //unscaledWidth;
		                aheight = parent.parent.height; //unscaledHeight;
	                }
	                else
	                {
		                awidth = parent.parent.height; //unscaledWidth;
		                aheight = parent.parent.width; //unscaledHeight;
	                }
                }
                catch (e:Error) {
                }
			}
        ]]>
    </mx:Script>

    <fills>
    	<paint:LinearGradientFill id="MainFill" angle="0">
            <paint:GradientStop ratio="0" alpha="1" color="#EEEEEE"/>
            <paint:GradientStop ratio="1" alpha="1" color="#AAAAAA"/>
    	</paint:LinearGradientFill>
    </fills>

    <geometry>
    	<geometry:RoundedRectangle x="-8" cornerRadius="16" width="{awidth}" height="{aheight}" fill="{MainFill}"/>
    </geometry>

</GraphicBorderSkin>
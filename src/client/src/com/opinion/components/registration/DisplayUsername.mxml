<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:registration="com.opinion.components.registration.*" initialize="init()">
	<mx:Script>
		<![CDATA[
			private function init():void {
				if (this.parentApplication.registeredEmail != "") {
					emailText.text = 'Email: ' + this.parentApplication.registeredEmail;
				}
			}
			
			private function clickContinue():void {
				this.parentApplication.login();
				this.parentApplication.popup.removeMe();
			}
			
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" styleName="notificationPopup">
		<mx:Text id="message" width="100%" text="Thank you for registering!  Please read and rate the responses of others by clicking on their points.  Your author and reviewer scores will grow as you participate. To return to the space, login with your username (or email address) and password and help the discussion evolve!"/>		
		<mx:Text text="{'Username: ' + this.parentApplication.registeredUsername}"/> 
		<mx:Text id="emailText" text="" paddingBottom="20"/>
		<mx:Button id="_submit_button" styleName="yellowButton" label="See where I stand!" click="clickContinue()"/>
	</mx:VBox>
</mx:Module>